<script>
	Pusher.logToConsole = false;

	var pusher = new Pusher('0b4f958b72ea1f9abde2', {
		cluster: 'ap2'
	});

	var img1 = document.getElementById('img1');
	var img2 = document.getElementById('img2');
	var img3 = document.getElementById('img3');
	var img4 = document.getElementById('img4');
	var img5 = document.getElementById('img5');
	var img6 = document.getElementById('img6');
	var query = document.getElementById('query');

	var channel = pusher.subscribe(`presence-{{ sessionID }}`);
	// console.log(channel);
	channel.bind('my-event', function (data) {
		const query2 = data.message.query;
		const urls = data.message.urls;

		console.log(query2)
		
		img1.src = urls[0];
		img2.src = urls[1];
		img3.src = urls[2];
		img4.src = urls[3];
		img5.src = urls[4];
		img6.src = urls[5];
	});

	channel.bind('pusher:member_added', function (member) {
		console.log('NEW MEMBER', member.info, member.id);
	});

	channel.bind('pusher:member_removed', function (member) {
		console.log('REMOVED MEMBER', member.info, member.id);
	});

